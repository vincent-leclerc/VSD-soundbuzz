{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<style>
.form-row {
    margin-top: 10em;
    margin-bottom: 10em;
}

.co-button {
    background-color: #6f00ff !important;
}

.co-button:hover {
    background-color: #fff !important;
    color: #6f00ff !important;
}

.form-control:focus {
    border-color: #6f00ff !important;
    box-shadow: 0 0 0 0.2rem rgba(111, 0, 255, .25) !important;
}
</style>

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    
<container class="form-container">
  <div class="row d-flex justify-content-center form-row">
    <div class="col-md-6">
        <h1>S'inscrire</h1>

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username, {
                label: "Nom d'utilisateur"
            }) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.agreeTerms, {
                label: 'Accepter les conditions d\'utilisation'
            }) }}

            <button type="submit" class="btn btn-purple btn-block my-4 co-button">Inscription</button>
        {{ form_end(registrationForm) }}
    </div>
  </div>
</container
{% endblock %}
